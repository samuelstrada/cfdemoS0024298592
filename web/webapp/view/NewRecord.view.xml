<mvc:View controllerName="com.xtendhr.web.controller.NewRecord"
    xmlns:mvc="sap.ui.core.mvc" xmlns:t="sap.ui.table" displayBlock="true" xmlns:f="sap.ui.layout.form"
    xmlns="sap.m">
    <Page id="pageNewRecord" title="Add a new record">
        <content>
			<Button id="botonBack" icon="sap-icon://nav-back" press="onBackMain"/>
            
            <VBox
                alignItems="Center"
                justifyContent="Center"
                fitContainer="true">
                
                
                <Label text="ShirtSize"/>
                <Input id="inputSize" placeholder="" />
                
                
                <Label text="ShirtColor"/>
                <Input id="inputcolor" placeholder="" />
                
                
                <Button text="Save" icon="sap-icon://save" press="onSave"/>
                
            </VBox>
        
        </content>
        
    </Page>
</mvc:View>